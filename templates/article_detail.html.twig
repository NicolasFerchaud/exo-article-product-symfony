{% extends 'base_article.html.twig' %}

{% block main %}
    <article>
        <h1>{{ article.title }}</h1>
        <div class="article_image">
            <img class="resp" src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.title }}">
        </div>
        <p class="article_detail">{{ article.content }}</p>
        <br>
        <p class="article_detail">Créez le {{ article.createdAt | date('d,m,Y') }}</p>
        <br>
    </article>
    <a class="nav" href="{{ path('articles') }}">Retourner sur tous les articles</a><br>
    <a class="nav" href="{{ path('home') }}">Retour à l'accueil</a>
{% endblock main %}