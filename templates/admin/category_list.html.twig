{% extends 'exo_final/base_exo_final.html.twig' %}

{% block main %}
    {% for category in categories %}
        <h2>{{ category.title }}</h2>
        <a href="{{ path('admin_category_delete',{'id':category.id}) }}"><input type="button" value="Supprimer"></a>

        {# category.articles est un arrayCollection, il faut donc faire une boucle dessus #}
        {% for article in category.articles %}
            <p>{{ article.title }}</p>
        {% endfor %}
        <br>
    {% endfor %}
{% endblock main %}